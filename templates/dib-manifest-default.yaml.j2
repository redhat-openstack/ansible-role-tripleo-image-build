disk_images:
  -
    imagename: overcloud-full
    arch: amd64
    type: qcow2
    distro: {{ artib_agent_ramdisk_distro | default(artib_base_os) }}
    elements:
      - hosts baremetal dhcp-all-interfaces os-collect-config overcloud-full overcloud-controller overcloud-compute overcloud-ceph-storage puppet-modules hiera os-net-config stable-interface-names grub2 element-manifest network-gateway dynamic-login enable-packages-install pip-and-virtualenv-override {% if artib_release in [ 'liberty', 'mitaka' ] %}heat-config-puppet heat-config script{% endif %}
    packages:
      - python-psutil
      - python-debtcollector
      - plotnetcfg
      - sos
      - python-UcsSdk
      - device-mapper-multipath
      - python-networking-bigswitch
      - openstack-neutron-bigswitch-lldp
      - openstack-neutron-bigswitch-agent
      - python-heat-agent-puppet
      - python-heat-agent-hiera
      - python-heat-agent-apply-config
    options:
      - "--min-tmpfs=5"
    environment:
        FS_TYPE: {{ artib_overcloud_fs_type }}
        DIB_LOCAL_IMAGE: "{{ artib_working_dir }}/overcloud-base.qcow2"
        DIB_DEFAULT_INSTALLTYPE: package
        ELEMENTS_PATH: "{{ artib_dib_elements_path|join(':') }}"
        # Needed for corosync to be able to use hostnames
        # https://bugs.launchpad.net/tripleo/+bug/1447497
        DIB_CLOUD_INIT_ETC_HOSTS: ''
  -
    imagename: ironic-python-agent
    arch: amd64
    type: qcow2
    distro: {{ artib_agent_ramdisk_distro | default(artib_base_os) }}
    elements:
      - ironic-agent dynamic-login element-manifest network-gateway enable-packages-install pip-and-virtualenv-override selinux-permissive
    packages:
      - python-hardware-detect
    options:
      - --min-tmpfs=5
    environment:
        DIB_LOCAL_IMAGE: "{{ artib_working_dir }}/minimal-base.qcow2"
        DIB_DEFAULT_INSTALLTYPE: package
        ELEMENTS_PATH: "{{ artib_dib_elements_path|join(':') }}"
